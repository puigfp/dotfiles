[core]
	excludesfile = /Users/francisco/.gitignore
	hooksPath = /usr/local/dd/global_hooks

[user]
	email = francisco.puig@datadoghq.com
	name = Francisco Puig

[branch]
	sort = -committerdate

[fetch]
	prune = true

[pull]
	ff = only

[include]
	path = ~/.gitconfig-github-token

[includeIf "gitdir:~/dev/"]
	path = ~/.gitconfig-personal

[url "git@github.com:"]
	insteadOf = https://github.com/

[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
