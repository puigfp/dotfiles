{
    "breadcrumbs.enabled": true,

    "editor.fontFamily": "'FiraCode-Retina', 'Fira Code', 'Cascadia Code', 'Droid Sans Mono'",
    "editor.fontSize": 13,
    "editor.fontLigatures": false,
    "editor.minimap.enabled": false,
    "editor.insertSpaces": true,
    "editor.rulers": [ 80, 100 ],
    "editor.renderWhitespace": "all",

    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,

    "workbench.colorTheme": "Night Owl",
    "workbench.editor.enablePreviewFromQuickOpen": false,

    "[python]": {
        "editor.rulers": [ 120 ], // black max line length
        "editor.formatOnSave": true
    },
    "python.languageServer": "Pylance",
    "python.formatting.provider": "black",

    "[rust]": {
        "editor.rulers": [ 80 ],
        "editor.formatOnSave": true
    },
    "rust-client.rustupPath": "/Users/francisco/.cargo/bin/rustup",
    "rust.rustfmt_path": "/Users/francisco/.cargo/bin/rustfmt",

    "[javascript]": {
        "editor.tabSize": 2,
    },

    "[typescript]": {
        "editor.tabSize": 2,
    },

    "[markdown]": {
        "editor.tabSize": 2,
        "editor.wordWrap": "on",
        "files.trimTrailingWhitespace": false
    },

    "go.useLanguageServer": false,
    "go.formatTool": "goimports",

    "latex-workshop.view.pdf.viewer": "tab",

    "cSpell.userWords": [],

    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    }
}
