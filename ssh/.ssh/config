Host github-personal
    User git
    HostName github.com
    IdentityFile ~/.ssh/id_rsa_personal
    PreferredAuthentications publickey

Host staging
  User francisco.puig
  Hostname jumpbox.datad0g.com
  ForwardAgent yes
  ControlPath ~/.ssh/controlmasters/%C
  ControlMaster auto
  ControlPersist 10m

Host prod
  User francisco.puig
  Hostname jumpbox.datadoghq.com
  ForwardAgent yes
  ControlPath ~/.ssh/controlmasters/%C
  ControlMaster auto
  ControlPersist 10m

Host * !github-personal
    IdentityFile ~/.ssh/id_rsa

Host *
    AddKeysToAgent yes
    UseKeychain yes
    IdentitiesOnly yes
