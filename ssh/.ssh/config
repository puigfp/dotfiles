Host github.com-personal
    HostName github.com
    User git
    IdentityFile ~/.ssh/id_rsa_personal
    IdentitiesOnly yes

Host staging
  User francisco.puig
  Hostname jumpbox.datad0g.com
  ForwardAgent yes
  ControlPath ~/.ssh/controlmasters/%C
  ControlMaster auto
  ControlPersist 10m

Host prod
  User francisco.puig
  Hostname jumpbox.datadoghq.com
  ForwardAgent yes
  ControlPath ~/.ssh/controlmasters/%C
  ControlMaster auto
  ControlPersist 10m

Host *
    IdentityFile ~/.ssh/id_rsa_datadog
    AddressFamily inet
    Compression yes
    UseKeychain yes
    AddKeysToAgent yes
